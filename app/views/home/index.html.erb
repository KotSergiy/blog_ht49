<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>

<br>

<table>
  <thead>
    <tr>
      <th>Post content</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<table>
  <thead>
    <tr>
      <th>Image url</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.url %></td>
        <td><%= link_to 'Show', image %></td>
        </tr>
    <% end %>
  </tbody>
</table>
